@import "/pages/template/top/top.wxss";

page {
    background: #f0f0f0;
}

.Scontainer-l {
    background: #fff;
    padding: 10rpx 40rpx 10rpx 40rpx;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}

.container-l {
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}

.none {
    display: none;
}

text {
    font-family: Microsoft Yahei;
    font-size: 28rpx;
}

.top {
    background: #fff;
    background: #f5f5f5;
    border-radius: 40rpx;
    padding: 10rpx 0;
    width: 75%;
}

.search-box{
  display: flex;
}

.search-box>button{
  border-radius: 40rpx;
   font-size: 30rpx;
  /* border: 1px solid blue; */
  color:white;
  background-color:blue;
  /* margin-left: 5rpx; */
}

.search-l {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    margin-left: 20rpx;
    /* margin-top: 20rpx; */
}

.input1 {
    display: inline-block;
    width: 80%;
    font-size: 30rpx;
    margin-left: 20rpx;
    height: 1.6rem;
    vertical-align: middle;
}

.searchname {
    padding: 15rpx;
    font-size: 30rpx;
}

.searchname:nth-child(1) {
    margin-top: 15prx;
}

.locate_layer {
    background-color: #f0f0f0;
    width: 100%;
    height: 100%;
}

.white_bg {
    display: block;
    background-color: white;
}

.gpsline {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    box-sizing: border-box;
    padding: 0 30rpx;
    vertical-align: baseline;
    background: #fff;
}

.gray_text {
    font-size: 28rpx;
    vertical-align: baseline;
    margin-left: 10rpx;
    background: #fff;
    padding: 10rpx 20rpx;
}

.marginleft {
    margin-left: 30rpx;
    font-weight: bold;
}

.city_wrap {
    width: 100%;
    box-sizing: border-box;
    background-color: #fff;
    padding-bottom: 40rpx;
}

.city_wrap>view {
    display: inline-block;
    padding: 0 20rpx;
    height: 60rpx;
    margin-left: 30rpx;
    margin-top: 30rpx;
    font-size: 28rpx;
    text-align: center;
    line-height: 60rpx;
    background: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 20rpx;
}

.hot {
    background: #fff;
    margin-top: 20rpx;
    padding-top: 0;
    height: 100%;
    padding-bottom: 40rpx;
}

.hot_title {
    padding: 30rpx;
    font-size: 35rpx;
    font-weight: bold;
}

.hot_content {
    padding: 10rpx 0 40rpx 30rpx;
    font-size: 30rpx;
}

.history_content>view {
    display: inline-block;
    padding: 0 20rpx;
    height: 60rpx;
    margin-left: 30rpx;
    margin-top: 30rpx;
    font-size: 28rpx;
    text-align: center;
    line-height: 60rpx;
    background: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 20rpx;
}

.history_title {
    padding: 30rpx;
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 0;
    width: 40%;
    display: inline-block;
    padding-bottom: 0;
}

.history_content {
    font-size: 30rpx;
}

.button {
    background: #fff;
    font-size: 25rpx;
    float: right;
    margin-top: 10rpx;
    display: inline;
    color: #F10180;
}

button::after {
    border: 0;
}