/* pages/me/authentication/authentication.wxss */

.img {
    width: 100%;
    height: 300rpx;
}

.canvas {
    width: 100%;
    height: 100%;
    position: absolute;
    top: -99999999999em;
    z-index: -1;
    opacity: 0;
    visibility: hidden;
    left: 0;
}

.school {
    padding: 0 30rpx 10rpx 30rpx;
    margin: 30rpx 45rpx 0 45rpx;
    font-size: 30rpx;
    color: #999;
}

.schoolname {
    padding: 30rpx 30rpx 10rpx 30rpx;
    margin: 30rpx 45rpx 0 45rpx;
    font-size: 30rpx;
    color: #999;
}

.schoolput {
    width: 80%;
    margin: 0 auto;
    margin-top: 10rpx;
}

.schoolput>input {
    border-bottom: 1px solid #999;
    color: #000;
    font-size: 30rpx;
}

.promise {
    text-align: center;
}

.promiseonly {
    display: inline-block;
}

.promiseonly>image {
    width: 180rpx;
    height: 180rpx;
    margin: 50rpx;
    margin-top: 30rpx;
    margin-bottom: 20rpx;
}

.promisefont {
    font-size: 30rpx;
    color: #999;
}

.button {
    width: 80%;
    font-size: 30rpx;
    margin-top: 50rpx;
    background: #f10180;
    color: #fff;
    line-height: 2.3;
    margin-bottom: 50rpx;
}

.messagegoicon {
    text-align: center;
    margin-top: 190rpx;
}

.messagegoicon>image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 100%;
}

.messagegocontent {
    text-align: center;
    font-size: 30rpx;
    margin-top: 30rpx;
}

.messagegocontent>text {
    display: block;
    line-height: 80rpx;
}