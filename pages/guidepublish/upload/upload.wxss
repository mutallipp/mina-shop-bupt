.page__hd>image{
  margin-left: 20rpx;
}

.hengtiao {
    width: 100%;
    height: 20rpx;
    background: #f5f5f5;
}

.select_type {
    width: 100%;
    height: auto;
    padding: 30rpx;
    text-align: left;
    position: relative;
    margin: 0;
    font-size: 30rpx;
}

.gprice {
    display: inline-block;
    width: 45%;
    padding-left: 5%;
    border-right: 1px solid #eee;
}

.newprice,.newtitle {
    display: inline-block;
}

.oldprice,.oldtitle {
    display: inline-block;
}

.newprice {
    width: 60%;
    float: right;
    display: inline-block;
    margin-top: -2rpx;
}

.oldprice {
    width: 65%;
    float: right;
    clear: both;
    position: relative;
    margin-top: -2rpx;
}

.lineheight {
    display: inline-block;
    width: 45%;
    margin-left: 3%;
}